# Test Environment Configuration
# Copy this file to .env.test and customize for your test environment

APP_NAME="alerts-test"
APP_VERSION="0.1.0"
APP_CONTACT_EMAIL="test@example.com"

# Intervals and limits (faster for testing)
POLL_MINUTES="1"
API_RATE_PER_MINUTE="10"
PUSHOVER_RATE_SECONDS="1"
VACUUM_HOURS="24"

# Test Database - uses sanitized test database
DB_PATH="data/alerts_test.sqlite"

# Logging
LOG_CHANNEL="stdout"
LOG_LEVEL="debug"

# Weather API
WEATHER_API_URL="https://api.weather.gov/alerts/active"

# Zones data file URL
ZONES_DATA_URL="https://www.weather.gov/source/gis/Shapefiles/County/bp18mr25.dbx"

# Timezone
TIMEZONE="America/Indianapolis"

# Notification channel feature flags
PUSHOVER_ENABLED="true"
NTFY_ENABLED="true"

# Pushover (test credentials - will not send real notifications)
PUSHOVER_API_URL="https://api.pushover.net/1/messages.json"

# ntfy configuration (test server)
NTFY_BASE_URL="https://ntfy.sh"
