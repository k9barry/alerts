APP_NAME="alerts"
APP_VERSION="0.1.0"
APP_CONTACT_EMAIL="you@example.com"

# Intervals and limits
POLL_MINUTES="3"
API_RATE_PER_MINUTE="4"
PUSHOVER_RATE_SECONDS="2"
# VACUUM_HOURS controls automatic database VACUUM operations
# Note: VACUUM optimizes the entire database but primarily targets cleaning up sent_alerts
# The zones and users tables are not deleted or modified during vacuum operations
VACUUM_HOURS="24"

# Database
DB_PATH="/data/alerts.sqlite"

# Logging
LOG_CHANNEL="stdout"
LOG_LEVEL="info"

# Weather API
WEATHER_API_URL="https://api.weather.gov/alerts/active"

# Zones data file URL
ZONES_DATA_URL="https://www.weather.gov/source/gis/Shapefiles/County/bp18mr25.dbx"

# Timezone IANA name used for localizing Effective/Expires in notifications
TIMEZONE="America/Indianapolis"

# Optional: Local CA bundle for SSL (place cacert.pem under certs/)
# Uncomment these if you need to trust custom CA bundle locally
#SSL_CERT_FILE="certs/cacert.pem"
#CURL_CA_BUNDLE="certs/cacert.pem"

# Notification channel feature flags
PUSHOVER_ENABLED="true"
NTFY_ENABLED="true"

# Pushover
PUSHOVER_API_URL="https://api.pushover.net/1/messages.json"
# NOTE: Per-user Pushover credentials (user key, app token) are now stored 
# in the users table and configured via the Users UI, not here.

# ntfy configuration  
NTFY_BASE_URL="https://ntfy.sh"
# NOTE: Per-user ntfy settings (topic, auth token, user/password) are now 
# stored in the users table and configured via the Users UI, not here.
