APP_NAME=alerts
APP_VERSION=0.1.0
APP_CONTACT_EMAIL=you@example.com

# Intervals and limits
POLL_MINUTES=3
API_RATE_PER_MINUTE=4
PUSHOVER_RATE_SECONDS=2
VACUUM_HOURS=24

# Database
DB_PATH=/data/alerts.sqlite

# Logging
LOG_CHANNEL=stdout
LOG_LEVEL=info

# Pushover
PUSHOVER_API_URL=https://api.pushover.net/1/messages.json
# Example credentials used only if PUSHOVER_USER/TOKEN are not set
PUSHOVER_USER_EXAMPLE=u-example
PUSHOVER_TOKEN_EXAMPLE=t-example

# Weather API
WEATHER_API_URL=https://api.weather.gov/alerts/active
