# Application Configuration
APP_NAME=alerts
APP_VERSION=1.0.0
APP_ENV=development

# Contact Information
CONTACT_EMAIL=user@example.com

# Database Configuration
DB_PATH=/app/data/alerts.db

# API Configuration
API_BASE_URL=https://api.weather.gov/alerts
API_RATE_LIMIT=4
API_RATE_PERIOD=60

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_PATH=/app/logs/alerts.log

# Scheduler Configuration
# Fetch interval in seconds (default: 300 = 5 minutes)
FETCH_INTERVAL=300

# Database vacuum interval in days (default: 7)
VACUUM_INTERVAL_DAYS=7

# Archive retention in days (default: 30)
ARCHIVE_RETENTION_DAYS=30

# Timezone
TZ=America/New_York
